{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "env": {
    "commonjs": true,
    "browser": true,
    "jquery": false,
    "node": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "global": true,
    "__dirname": true,
    "__DEBUG__": true,
    "__TEST__": false,
    "HTTPBRIDGE_SERVER_PATH": false,
    "SERVER_MODULE_NAME": false
  },
  "plugins": [
    "@typescript-eslint",
    "react-hooks"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "arrow-body-style": [
      2,
      "as-needed"
    ],
    "arrow-parens": 2,
    "arrow-spacing": 2,
    "block-scoped-var": 2,
    "brace-style": [
      2,
      "1tbs"
    ],
    "camelcase": [
      2,
      {
        "properties": "never"
      }
    ],
    "comma-dangle": [
      2,
      "never"
    ],
    "comma-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "comma-style": [
      2,
      "last"
    ],
    "complexity": [
      2,
      {
        "max": 20
      }
    ],
    "curly": 2,
    "dot-location": [
      2,
      "property"
    ],
    "eol-last": 2,
    "func-call-spacing": 2,
    "func-names": 2,
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "key-spacing": [
      2,
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "keyword-spacing": 2,
    "max-depth": [
      2,
      4
    ],
    "max-len": [
      1,
      120
    ],
    "max-nested-callbacks": [
      2,
      4
    ],
    "max-statements": [
      2,
      42
    ],
    "new-cap": 2,
    "new-parens": 2,
    "no-alert": 2,
    "no-array-constructor": 2,
    "no-caller": 2,
    "no-catch-shadow": 2,
    "no-console": 2,
    "no-delete-var": 2,
    "no-div-regex": 2,
    "no-else-return": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extra-bind": 2,
    "no-extra-parens": [
      2,
      "functions"
    ],
    "no-extend-native": 2,
    "no-floating-decimal": 2,
    "no-implied-eval": 2,
    "no-invalid-regexp": 2,
    "no-iterator": 2,
    "no-label-var": 2,
    "no-labels": 2,
    "no-lone-blocks": 2,
    "no-lonely-if": 2,
    "no-loop-func": 2,
    "no-mixed-requires": 2,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-multiple-empty-lines": [
      2,
      {
        "max": 2
      }
    ],
    "no-nested-ternary": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-object": 2,
    "no-new-require": 2,
    "no-new-wrappers": 2,
    "no-octal": 2,
    "no-octal-escape": 2,
    "no-path-concat": 2,
    "no-param-reassign": 2,
    "no-proto": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-throw-literal": 2,
    "no-trailing-spaces": 2,
    "no-undef-init": 2,
    "no-undefined": 2,
    "no-unneeded-ternary": 2,
    "no-unused-vars": [
      2,
      {
        "vars": "all"
      }
    ],
    "no-use-before-define": [
      2,
      "nofunc"
    ],
    "no-var": 2,
    "no-void": 2,
    "no-with": 2,
    "object-curly-spacing": [
      2,
      "always"
    ],
    "operator-assignment": [
      2,
      "always"
    ],
    "operator-linebreak": [
      2,
      "after"
    ],
    "quote-props": [
      2,
      "as-needed"
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "radix": [
      2,
      "as-needed"
    ],
    "react/jsx-indent": [
      2,
      2
    ],
    "react/jsx-key": 2,
    "react/jsx-max-props-per-line": [
      1,
      {
        "maximum": 3
      }
    ],
    "react/jsx-no-bind": [
      2,
      {
        "ignoreRefs": true,
        "allowArrowFunctions": true
      }
    ],
    "react/jsx-no-comment-textnodes": 2,
    "react/jsx-no-duplicate-props": 2,
    "react/jsx-no-undef": 2,
    "react/no-deprecated": 2,
    "react/no-unknown-property": 2,
    "react/no-unused-prop-types": 2,
    "react/prop-types": 2,
    "react/self-closing-comp": 2,
    "semi": [
      2,
      "always"
    ],
    "semi-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "space-before-blocks": [
      2,
      "always"
    ],
    "space-before-function-paren": [
      2,
      "always"
    ],
    "space-in-parens": [
      2,
      "never"
    ],
    "space-infix-ops": 2,
    "space-unary-ops": [
      2,
      {
        "words": true,
        "nonwords": false
      }
    ],
    "spaced-comment": [
      2,
      "always"
    ],
    "wrap-iife": 2,
    "yoda": [
      2,
      "never"
    ],
    "@typescript-eslint/unbound-method": [
      "off"
    ],
    "@typescript-eslint/no-this-alias": [
      "off"
    ],
    "react-hooks/rules-of-hooks": [
      "error"
    ],
    "react-hooks/exhaustive-deps": [
      "off"
    ]
  }
}
